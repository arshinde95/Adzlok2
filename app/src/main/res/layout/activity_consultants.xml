<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arshinde.adzlok.Consultants">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="Consultants"
            app:titleTextColor="#505050"
            android:background="#fff"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:paddingBottom="15sp"
            android:background="@drawable/shadow_rect"
            >
            <LinearLayout
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBarLayout"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/robot_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Explore Consultants"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_marginTop="17sp"
                            android:fontFamily="@font/robot_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/consultant"
                            android:justificationMode="inter_word"
                            android:textSize="12sp"
                          />

                </LinearLayout>

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginLeft="17sp"
                        android:src="@drawable/searchhh"
                        android:layout_gravity="center_vertical"/>



            </LinearLayout>





        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:paddingBottom="15sp"
            android:background="@drawable/shadow_rect"
            >
            <LinearLayout
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBarLayout"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/robot_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore Consultants"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_marginTop="17sp"
                        android:fontFamily="@font/robot_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/consultant"
                        android:justificationMode="inter_word"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:layout_marginLeft="17sp"
                    android:src="@drawable/free_con"
                    android:layout_gravity="center_vertical"/>



            </LinearLayout>





        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:paddingBottom="15sp"
            android:background="@drawable/shadow_rect"
            >
            <LinearLayout
                android:padding="10sp"
                android:id="@+id/gethelpLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBarLayout"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/robot_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Explore Consultants"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_marginTop="17sp"
                        android:fontFamily="@font/robot_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/consultant"
                        android:justificationMode="inter_word"
                        android:textSize="12sp"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:layout_marginLeft="17sp"
                    android:src="@drawable/paid_con"
                    android:layout_gravity="center_vertical"/>



            </LinearLayout>





        </android.support.v7.widget.CardView>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
