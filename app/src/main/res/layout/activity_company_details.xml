<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arshinde.adzlok.CompanyDetails">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:title="Reach Us"
            app:titleTextColor="#505050"
            android:background="#fff"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout

        android:id="@+id/linear"
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120sp"
            android:src="@drawable/user"
            android:layout_height="120sp"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raheja Developers Mumbai"
            android:textSize="25sp"

            />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fff"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="60sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:paddingTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Username:" />
            <TextView
                android:paddingTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Buget:" />
            <TextView
                android:paddingTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Location:" />
            <TextView
                android:paddingTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Ad Type:" />
            <TextView
                android:paddingTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Number of proposal Acception:" />
            <TextView
                android:paddingTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Number of Proposal Received:" />







        </LinearLayout>



    </android.support.v7.widget.CardView>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pitch Noew"
        android:background="#ff00"
        android:textColor="@color/white"
        android:layout_marginTop="520sp"/>


</RelativeLayout>
